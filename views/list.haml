!!! 5
%head
  %script{ :src => "http://code.jquery.com/jquery-1.10.1.min.js" }

%body
  #search 
    %input#search_box( type = 'plain/text' )
    %input#search_it( type = 'button' value="Search")
    .results
  #content
    %audio{ :controls => 'controls' }
      %source{ :src => @url_list.first, :type => 'audio/mpeg'}
  - @url_list.each do |url|
    %a{ :href => url }= url
    %br/

  .control
    %a{ :id=> 'next', :href => '#next'} next
    %a{ :id=> 'prev', :href => '#prev'} previous

%footer
  %script(src="js/script.js")
